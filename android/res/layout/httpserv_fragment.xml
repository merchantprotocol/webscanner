<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/tendp"
    android:paddingRight="@dimen/tendp"
    android:paddingTop="@dimen/sixtydp"
    android:paddingBottom="@dimen/tendp"
    tools:context="au.com.wallaceit.httpsocketadaptor.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/stattxt"
        android:text="@string/server_stopped"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/serverbtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_server"/>

</LinearLayout>
